<h2>Sign Me Up!</h2>
<div class="textpost">
  <form>
  <div class="light">
    <div class="form-group">
     <label for="name">Name</label>
     {{input value=name id="name" placeholder="Your Name"}}
    </div>

    <div class="form-group">
      <label for="image">Image</label>
      {{input value=image id="image" placeholder="Your Image"}}
    </div>

    <div class="form-group">
      <label for="email">Email</label>
      {{input value=userEmail id="email" placeholder="Email address"}}
    </div>

    <div class="form-group">
      <label for="password">Password</label>
      {{input type="password" value=userPassword id="password" placeholder="Password"}}
    </div>
  </div>
    <a class="navbar-brand"><button class="btn btn-danger"{{action 'saveUser'}}>Create New User</button></a>
 </form>
</div>
